<div class="min-h-full bg-gray-50 dark:bg-gray-900">
  <%= render 'shared/navbar' %>

  <div class="py-10">
    <header class="mb-6 sm:mb-8">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <nav class="mb-3 sm:mb-4">
          <%= link_to repository_issues_path(@repository), class: "inline-flex items-center text-sm sm:text-base text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <%= t('issues.show.back_to_list') %>
          <% end %>
        </nav>
        <div class="flex flex-col sm:flex-row sm:items-start gap-3 sm:gap-4">
          <div class="flex-shrink-0">
            <%= render IssueStateComponent.new(state: @issue.state) %>
          </div>
          <div class="flex-1 min-w-0">
            <h1 class="text-2xl sm:text-3xl font-bold leading-tight tracking-tight text-gray-900 dark:text-white break-words">
              <%= @issue.title %>
            </h1>
            <div class="mt-2 flex flex-wrap items-center gap-x-2 gap-y-1 text-sm sm:text-base text-gray-500 dark:text-gray-400">
              <span class="font-mono text-sm">#<%= @issue.number %></span>
              <% if @issue.author_login || @issue.github_created_at %>
                <span class="hidden sm:inline">•</span>
                <% if @issue.author_login %>
                  <span class="text-sm sm:text-base">opened by <span class="font-medium"><%= @issue.author_login %></span></span>
                <% end %>
                <% if @issue.github_created_at %>
                  <span class="hidden sm:inline">•</span>
                  <span class="text-sm sm:text-base"><%= time_ago_in_words(@issue.github_created_at) %> ago</span>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- Issue Body -->
        <div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-6 border border-gray-200 dark:border-gray-700">
          <div class="px-4 sm:px-6 py-4 sm:py-5">
            <div class="flex flex-col sm:flex-row sm:items-start gap-4">
              <% if @issue.author_avatar_url %>
                <div class="flex-shrink-0">
                  <%= render AvatarComponent.new(
                    src: @issue.author_avatar_url,
                    alt: @issue.author_login || "Author",
                    size: :medium
                  ) %>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <div class="prose prose-sm sm:prose max-w-none break-words
                            !text-gray-900 dark:!text-gray-200
                            [&_p]:!text-gray-900 dark:[&_p]:!text-gray-200
                            [&_li]:!text-gray-900 dark:[&_li]:!text-gray-200
                            [&_td]:!text-gray-900 dark:[&_td]:!text-gray-200
                            [&_th]:!text-gray-900 dark:[&_th]:!text-gray-200
                            prose-headings:!text-gray-900 dark:prose-headings:!text-white
                            prose-a:!text-blue-600 dark:prose-a:!text-blue-400 prose-a:break-all
                            prose-strong:!text-gray-900 dark:prose-strong:!text-white
                            prose-code:!text-pink-600 dark:prose-code:!text-pink-400
                            prose-code:bg-gray-100 dark:prose-code:bg-gray-900
                            prose-pre:bg-gray-100 dark:prose-pre:bg-gray-900
                            prose-pre:!text-gray-900 dark:prose-pre:!text-gray-200
                            prose-pre:border prose-pre:border-gray-300 dark:prose-pre:border-gray-700">
                  <% if @issue.body.present? %>
                    <%= render_markdown(@issue.body) %>
                  <% else %>
                    <p class="text-gray-500 dark:text-gray-400 italic">No description provided.</p>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Labels -->
            <% if @issue.labels.present? %>
              <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                <div class="flex flex-wrap gap-2">
                  <% @issue.labels.each do |label| %>
                    <%= render IssueLabelComponent.new(label: label) %>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Assignees -->
            <% if @issue.assignees.present? %>
              <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Assignees</h3>
                <div class="flex flex-wrap gap-2">
                  <% @issue.assignees.each do |assignee| %>
                    <div class="flex items-center gap-2">
                      <%= render AvatarComponent.new(
                        src: assignee["avatar_url"] || assignee[:avatar_url],
                        alt: assignee["login"] || assignee[:login],
                        size: :small
                      ) %>
                      <span class="text-sm text-gray-700 dark:text-gray-300"><%= assignee["login"] || assignee[:login] %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Comments -->
        <div class="mb-6">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
            <%= t('issues.show.comments') %> (<%= @issue.issue_comments.count %>)
          </h2>

          <% if @issue.issue_comments.any? %>
            <div class="space-y-4">
              <% @issue.issue_comments.each do |comment| %>
                <%= render IssueCommentComponent.new(comment: comment) %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 bg-white dark:bg-gray-800 shadow rounded-lg">
              <p class="text-gray-500 dark:text-gray-400"><%= t('issues.show.no_comments') %></p>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>
