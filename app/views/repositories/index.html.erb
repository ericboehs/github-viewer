<div class="min-h-full bg-gray-50 dark:bg-gray-900">
  <%= render 'shared/navbar' %>

  <div class="py-10">
    <header>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900 dark:text-white"><%= t('repositories.index.title') %></h1>
      </div>
    </header>
    <main>
      <div class="sm:mx-auto sm:w-full sm:max-w-4xl px-6 py-4 lg:px-8">
        <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg">
          <div class="px-4 py-4 sm:p-4">
            <%= render 'shared/flash_messages' %>

            <!-- Repository List -->
            <% if @repositories.any? %>
              <div class="overflow-hidden">
                <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-700">
                  <thead class="bg-gray-50 dark:bg-gray-800">
                    <tr>
                      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 dark:text-white sm:pl-6"><%= t('repositories.index.table.repository') %></th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white"><%= t('repositories.index.table.domain') %></th>
                      <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 dark:text-white"><%= t('repositories.index.table.last_synced') %></th>
                      <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                        <span class="sr-only"><%= t('repositories.index.table.actions') %></span>
                      </th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 dark:divide-gray-700 bg-white dark:bg-gray-900">
                    <% @repositories.each do |repository| %>
                      <tr>
                        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm sm:pl-6">
                          <div class="font-medium text-gray-900 dark:text-white font-mono">
                            <%= repository.full_name %>
                          </div>
                          <% if repository.description.present? %>
                            <div class="text-gray-500 dark:text-gray-400 mt-1">
                              <%= truncate(repository.description, length: 100) %>
                            </div>
                          <% end %>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-400 font-mono">
                          <%= repository.github_domain %>
                        </td>
                        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 dark:text-gray-400">
                          <% if repository.stale? %>
                            <span class="inline-flex items-center rounded-md bg-yellow-50 dark:bg-yellow-900/20 px-2 py-1 text-xs font-medium text-yellow-800 dark:text-yellow-400 ring-1 ring-inset ring-yellow-600/20 dark:ring-yellow-400/20">
                              <%= repository.staleness_in_words %>
                            </span>
                          <% else %>
                            <%= repository.staleness_in_words %>
                          <% end %>
                        </td>
                        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 space-x-2">
                          <%= link_to 'View Issues', repository_issues_path(repository),
                              class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
                          <%= button_to t('repositories.index.actions.refresh'), refresh_repository_path(repository),
                              method: :post,
                              class: "text-emerald-600 hover:text-emerald-900 dark:text-emerald-400 dark:hover:text-emerald-300" %>
                          <%= button_to t('repositories.index.actions.remove'), repository_path(repository),
                              method: :delete,
                              data: { confirm: t('repositories.destroy.confirm') },
                              class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <h3 class="mt-2 text-sm font-semibold text-gray-900 dark:text-white"><%= t('repositories.index.empty.title') %></h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= t('repositories.index.empty.description') %></p>
              </div>
            <% end %>

            <!-- Import Repository Form -->
            <div class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-8">
              <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white mb-4"><%= t('repositories.index.import.title') %></h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-6"><%= t('repositories.index.import.description') %></p>

              <%= form_with model: Repository.new, url: repositories_path, local: true, class: "space-y-4" do |f| %>
                <div class="flex gap-4">
                  <div class="flex-1">
                    <%= render Auth::InputComponent.new(
                      form: f,
                      field: :url,
                      label: nil,
                      type: :text,
                      placeholder: "owner/repo or https://github.com/owner/repo",
                      autocomplete: "off"
                    ) %>
                  </div>
                  <div class="flex items-center">
                    <%= render Auth::ButtonComponent.new(
                      text: t('repositories.index.import.button'),
                      type: :submit,
                      variant: :primary
                    ) %>
                  </div>
                </div>
              <% end %>

              <p class="mt-4 text-xs text-gray-500 dark:text-gray-400">
                Supports formats:
                <code class="text-gray-700 dark:text-gray-300"><%= t('repositories.index.import.format_examples.shorthand') %></code>,
                <code class="text-gray-700 dark:text-gray-300"><%= t('repositories.index.import.format_examples.domain') %></code>, or
                <code class="text-gray-700 dark:text-gray-300"><%= t('repositories.index.import.format_examples.full_url') %></code>
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
