<% content_for :title, t('repositories.page_title') %>

<div class="min-h-full bg-gray-50 dark:bg-gray-900">
  <%= render 'shared/navbar' %>

  <div class="py-10">
    <main>
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <%= render 'shared/flash_messages' %>

        <div class="divide-y divide-gray-200 dark:divide-gray-700 overflow-hidden rounded-lg bg-white dark:bg-gray-800 shadow outline -outline-offset-1 outline-gray-200 dark:outline-gray-700">
          <div class="px-4 py-5 sm:px-6 flex items-center justify-between">
            <h1 class="text-xl font-semibold leading-6 text-gray-900 dark:text-white"><%= t('repositories.index.title') %></h1>
            <%= link_to new_repository_path, class: "inline-flex items-center gap-x-2 rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" do %>
              <svg class="-ml-0.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
              </svg>
              Add Repository
            <% end %>
          </div>
          <div class="px-4 py-5 sm:p-6">

            <!-- Repository List -->
            <% if @repositories.any? %>
              <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
                <% @repositories.each do |repository| %>
                  <li class="py-4">
                    <div class="flex items-start justify-between gap-x-4">
                      <div class="min-w-0 flex-1">
                        <%= link_to repository_issues_path(repository), class: "font-medium text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300 font-mono text-sm" do %>
                          <%= repository.full_name %>
                        <% end %>
                        <div class="mt-1 flex items-center gap-x-4 text-xs text-gray-500 dark:text-gray-400">
                          <span class="font-mono"><%= repository.github_domain %></span>
                          <span class="hidden sm:inline">â€¢</span>
                          <span class="hidden sm:inline">
                            <% if repository.cached_at.present? %>
                              <% if repository.stale? %>
                                <span class="inline-flex items-center rounded-md bg-yellow-50 dark:bg-yellow-900/20 px-2 py-1 text-xs font-medium text-yellow-800 dark:text-yellow-400 ring-1 ring-inset ring-yellow-600/20 dark:ring-yellow-400/20">
                                  <%= time_ago_tag(repository.cached_at) %>
                                </span>
                              <% else %>
                                <%= time_ago_tag(repository.cached_at) %>
                              <% end %>
                            <% else %>
                              <span class="text-gray-400 dark:text-gray-500 italic"><%= t('repositories.index.table.never_synced') %></span>
                            <% end %>
                          </span>
                        </div>
                        <!-- Mobile: Show last synced on second line -->
                        <div class="mt-1 sm:hidden text-xs text-gray-500 dark:text-gray-400">
                          <% if repository.cached_at.present? %>
                            <% if repository.stale? %>
                              <span class="inline-flex items-center rounded-md bg-yellow-50 dark:bg-yellow-900/20 px-2 py-1 text-xs font-medium text-yellow-800 dark:text-yellow-400 ring-1 ring-inset ring-yellow-600/20 dark:ring-yellow-400/20">
                                <%= time_ago_tag(repository.cached_at) %>
                              </span>
                            <% else %>
                              <%= time_ago_tag(repository.cached_at) %>
                            <% end %>
                          <% else %>
                            <span class="text-gray-400 dark:text-gray-500 italic"><%= t('repositories.index.table.never_synced') %></span>
                          <% end %>
                        </div>
                      </div>
                      <div class="flex gap-2 flex-shrink-0">
                        <%= button_to refresh_repository_path(repository), method: :post, class: "inline-flex items-center text-emerald-600 hover:text-emerald-900 dark:text-emerald-400 dark:hover:text-emerald-300 cursor-pointer" do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
                          </svg>
                          <span class="sr-only"><%= t('repositories.index.actions.refresh') %></span>
                        <% end %>
                        <%= button_to repository_path(repository), method: :delete, data: { turbo_confirm: t('repositories.destroy.confirm') }, class: "inline-flex items-center text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300 cursor-pointer" do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                          </svg>
                          <span class="sr-only"><%= t('repositories.index.actions.remove') %></span>
                        <% end %>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <h3 class="mt-2 text-sm font-semibold text-gray-900 dark:text-white"><%= t('repositories.index.empty.title') %></h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400"><%= t('repositories.index.empty.description') %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
