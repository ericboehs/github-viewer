<nav class="bg-white dark:bg-gray-800 shadow-sm" data-controller="navbar">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button -->
        <button type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-500 dark:hover:text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 dark:focus:ring-white focus:ring-inset" aria-controls="mobile-menu" aria-expanded="false" data-action="click->navbar#toggleMobileMenu keydown->navbar#handleMobileButtonKeydown">
          <span class="absolute -inset-0.5"></span>
          <span class="sr-only"><%= t('navigation.mobile_menu.open') %></span>
          <!-- Menu open: "hidden", Menu closed: "block" -->
          <svg class="block size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-navbar-target="mobileOpenIcon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <!-- Menu open: "block", Menu closed: "hidden" -->
          <svg class="hidden size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-navbar-target="mobileCloseIcon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex shrink-0 items-center">
          <%= link_to root_path do %>
            <svg class="h-10 w-10 text-gray-900 dark:text-white" fill="currentColor" viewBox="0 0 16 16" aria-label="<%= t('app.logo_alt') %>">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/>
            </svg>
          <% end %>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <!-- Current: "border-emerald-500 text-gray-900", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
          <% if current_page?(root_path) %>
            <%= link_to root_path, class: "inline-flex items-center border-b-2 border-emerald-500 px-1 pt-1 text-sm font-medium text-gray-900 dark:text-white hover:no-underline", "aria-current": "page" do %>
              <%= t('navigation.dashboard') %>
            <% end %>
          <% else %>
            <%= link_to t('navigation.dashboard'), root_path, class: "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-300 dark:hover:text-white" %>
          <% end %>

          <% if current_page?(repositories_path) %>
            <%= link_to repositories_path, class: "inline-flex items-center border-b-2 border-emerald-500 px-1 pt-1 text-sm font-medium text-gray-900 dark:text-white hover:no-underline", "aria-current": "page" do %>
              <%= t('navigation.repositories') %>
            <% end %>
          <% else %>
            <%= link_to t('navigation.repositories'), repositories_path, class: "inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700 dark:text-gray-300 dark:hover:text-white" %>
          <% end %>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <!-- Profile dropdown -->
        <div class="relative">
          <div>
            <button type="button" class="relative flex rounded-full bg-white dark:bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 dark:focus:ring-white focus:ring-offset-2 dark:focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-action="click->navbar#toggleDropdown keydown->navbar#handleButtonKeydown">
              <span class="absolute -inset-1.5"></span>
              <span class="sr-only"><%= t('navigation.user_menu.open') %></span>
              <%= render AvatarComponent.new(user: Current.user, size: 8, text_size: "sm") %>
            </button>
          </div>

          <!-- Dropdown menu -->
          <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white dark:bg-gray-700 py-1 shadow-lg ring-1 ring-black/5 dark:ring-white/10 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-navbar-target="dropdown">
            <%= link_to t('navigation.user_menu.profile'), user_path, class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600 focus:bg-gray-100 dark:focus:bg-gray-600", role: "menuitem" %>
            <%= link_to t('navigation.user_menu.sign_out'), session_path, data: { "turbo-method": :delete },
                class: "block px-4 py-2 text-sm text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-600 focus:bg-gray-100 dark:focus:bg-gray-600", role: "menuitem" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="hidden sm:hidden" id="mobile-menu" data-navbar-target="mobileMenu">
    <div class="space-y-1 px-2 pt-2 pb-3">
      <!-- Light mode: "bg-emerald-50 border-emerald-500 text-emerald-700", Dark mode: "bg-gray-900 text-white" -->
      <% if current_page?(root_path) %>
        <%= link_to root_path, class: "block border-l-4 border-emerald-500 bg-emerald-50 dark:bg-gray-900 py-2 pl-3 pr-4 text-base font-medium text-emerald-700 dark:text-white dark:border-none dark:rounded-md hover:bg-emerald-50 dark:hover:bg-gray-900" do %>
          <%= t('navigation.dashboard') %>
        <% end %>
      <% else %>
        <%= link_to t('navigation.dashboard'), root_path, class: "block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white" %>
      <% end %>

      <% if current_page?(repositories_path) %>
        <%= link_to repositories_path, class: "block border-l-4 border-emerald-500 bg-emerald-50 dark:bg-gray-900 py-2 pl-3 pr-4 text-base font-medium text-emerald-700 dark:text-white dark:border-none dark:rounded-md hover:bg-emerald-50 dark:hover:bg-gray-900" do %>
          <%= t('navigation.repositories') %>
        <% end %>
      <% else %>
        <%= link_to t('navigation.repositories'), repositories_path, class: "block border-l-4 border-transparent py-2 pl-3 pr-4 text-base font-medium text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:text-white" %>
      <% end %>
    </div>
  </div>
</nav>
